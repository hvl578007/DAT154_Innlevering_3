<Window x:Class="Oblig3Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oblig3Graphics"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1800" Name="myWindow">
    <Grid Name="myGrid">
        <Canvas Name="myCanvas"  Margin="10,10,10,10" Grid.ZIndex="1">

        </Canvas>
        <Canvas Name="planetInfoCanvas" Margin="0,0,20,20" HorizontalAlignment="Right" Width="600" Height="500" VerticalAlignment="Bottom" Grid.ZIndex="2" Visibility="Hidden" Background="AliceBlue">
            
        </Canvas>
        <ComboBox Name="planetComboBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="planetTextButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,50" Height="25" Width="120" Content="Hide textboxes" Grid.ZIndex="2"/>
        <Button Name="planetOrbitButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="200,0,0,50" Height="25" Width="120" Content="Hide orbits" Grid.ZIndex="2"/>
    </Grid>
</Window>
